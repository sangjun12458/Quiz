#include <iostream>
#include <cstring>
#define MAX 1001
using namespace std;

char ch1[MAX];
char ch2[MAX];
int arr[MAX][MAX] = {{0,}};

void Input()
{
    cin >> ch1;
    cin >> ch2;
}
void Solution()
{
    for (int i = 1; i <= strlen(ch1); i++)
    {
        for (int j = 1; j <= strlen(ch2); j++)
        {
            if (ch1[i - 1] == ch2[j - 1])
            {
                arr[i][j] = arr[i - 1][j - 1] + 1;
            }
            else
            {
                arr[i][j] = arr[i - 1][j];
                if (arr[i][j] < arr[i][j - 1])
                { 
                    arr[i][j] = arr[i][j - 1]; 
                }
            }
        }
    }
    cout << arr[strlen(ch1)][strlen(ch2)];
}
void Solve()
{
    Input();
    Solution();
}
int main()
{
    ios::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);

    Solve();
    return 0;
}
